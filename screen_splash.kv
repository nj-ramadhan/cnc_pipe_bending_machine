#:kivy 2.1.0

<ScreenSplash>:
    BoxLayout:
        orientation: 'vertical'
        padding: 25 , 25
        Label:
            text: 'Pipe Bending CNC Machine'
            halign: 'center'
            valign: 'middle'
            font_size: 64
            padding: 10 , 10
            bold: True
            size_hint_y: 0.2
            color: 0, 0, 0

        BoxLayout:
            orientation: 'horizontal'
            padding: 25 , 25
            size_hint_y: 0.2

            Image:
                id: logo
                source:'asset/logo_rafindo.png'
                allow_stretch: True
            
            Image:
                id: logo
                source:'asset/logo_polman.png'
                allow_stretch: True


        Label:
            text: ''
            size_hint_y: 0.03

        MDProgressBar:
            id: progress_bar
            padding: 100
            spacing: 200
            size_hint_y: .03
            max: 100
            value: 1

        Label:
            id: progress_bar_label
            text: 'Loading.. [0 %]'
            halign: 'center'
            valign: 'middle'
            font_size: 50
            padding: 2 , 2
            bold: 'true'
            size_hint_y: .1
            color: 0, 0, 0

        Label:
            text: 'Developed by Polman Bandung & Rafindo Raya, Copyrights @2023'
            halign: 'center'
            valign: 'middle'
            font_size: 30
            padding: 2 , 2
            bold: 'true'
            size_hint_y: .1
            color: 0, 0, 0
#:kivy 2.1.0

#:import NoTransition kivy.uix.screenmanager.NoTransition
#:include screen_splash.kv
#:include screen_tube_setting.kv
#:include screen_machine_setting.kv
#:include screen_advanced_setting.kv
#:include screen_data.kv
#:include screen_graph.kv

ScreenManager:
    id: screen_manager
    transition: NoTransition()
    Screen:
        name: 'screen_splash'
        ScreenSplash:
            app_window: app
            screen_manager: screen_manager
            screen_tube_setting: screen_tube_setting

    Screen:
        name: 'screen_tube_setting'
        ScreenTubeSetting:
            id: screen_tube_setting
            screen_manager: screen_manager

    Screen:
        name: 'screen_machine_setting'
        ScreenMachineSetting:
            id: screen_machine_setting
            screen_manager: screen_manager

    Screen:
        name: 'screen_advanced_setting'
        ScreenAdvancedSetting:
            id: screen_advanced_setting
            screen_manager: screen_manager

    Screen:
        name: 'screen_data'
        ScreenData:
            id: screen_data
            screen_manager: screen_manager
         
    Screen:
        name: 'screen_graph'
        ScreenGraph:
            id: screen_graph
            screen_manager: screen_manager
                  

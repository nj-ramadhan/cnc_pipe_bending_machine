#:kivy 2.1.0

<ScreenPipeSetting>:
    MDBoxLayout:
        orientation: "vertical"

		# header layout
        MDBoxLayout:
            id: header_layout
            orientation: "horizontal"
            padding: 20
			size_hint_y: 0.1
                    
            Image:
                id: logo
                source:'asset/logo_rafindo.png'
                size_hint_x: 0.25
                allow_stretch: True 

			MDLabel:
				id: subtitle            
				text: "PIPE BENDING CNC MACHINE"
				halign: "center"
				valign: "middle"
				font_style: 'H5'
				color: 0, 0, 0
                  
            Image:
                id: logo
                source:'asset/logo_polman.png'
                size_hint_x: 0.25
                allow_stretch: True  

		# title layout
		MDBoxLayout:
			id: layout_title
			orientation: "horizontal"
			size_hint_y: 0.05

			MDIconButton:
				id: bt_shutdown
				icon: "menu"
				size_hint_x: 0.1
				on_press: root.screen_main_menu()

			MDLabel:
				text: "PIPE SETTING"
				halign: "center"
				valign: "middle"
				font_style: 'H6'

			MDIconButton:
				id: bt_shutdown
				icon: "power"
				size_hint_x: 0.1
				on_press: root.exec_shutdown()

		# setting layout
		MDBoxLayout:
			id: layout_pipe_setting
			orientation: "vertical"
			size_hint_y: 0.85
			padding:10
			spacing:10

			MDBoxLayout:
				orientation: "horizontal"

				MDGridLayout:
					cols:2
					padding:10
					spacing:10
					size_hint_x: 0.6

					MDLabel:
						text: "Length"
						font_style: 'Body1'

					MDTextField:
						id: input_pipe_length
						hint_text: "Input Length (mm)"
						font_style: 'Body1'
						input_filter: 'float'
						on_text_validate: root.update()

					MDLabel:
						text: "Diameter"
						font_style: 'Body1'

					MDTextField:
						id: input_pipe_diameter
						hint_text: "Input Diameter (mm)"
						font_style: 'Body1'
						input_filter: 'float'
						on_text_validate: root.update()

					MDLabel:
						text: "Thickness"
						font_style: 'Body1'

					MDTextField:
						id: input_pipe_thickness
						hint_text: "Input Thickness (mm)"
						font_style: 'Body1'
						input_filter: 'float'
						on_text_validate: root.update()					
						
				# illustration pipe
				MDBoxLayout:
					id: pipe_illustration
					size_hint_x: 0.4
					padding:10







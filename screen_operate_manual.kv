#:kivy 2.1.0

<ScreenOperateManual>:
    MDBoxLayout:
        orientation: "vertical"
		# header layout
        MDBoxLayout:
            id: header_layout
            orientation: "horizontal"
            padding: 20
			size_hint_y: 0.1

			MDFillRoundFlatIconButton:
				id: bt_shutdown
				icon: "power"
				text: " "
				font_size: 64
				size_hint_x: 0.15
				on_press: root.exec_shutdown()

            MDBoxLayout:
                orientation: "vertical"
                padding: 0, 15

                MDLabel:
                    id: subtitle            
                    text: "Pipe Bending CNC Machine"
                    bold: True
                    font_size: 64
                    color: 0, 0, 0
                    
            Image:
                id: logo
                source:'asset/logo_rafindo.png'
                size_hint_x: 0.125
                allow_stretch: True                   

            Image:
                id: logo
                source:'asset/logo_polman.png'
                size_hint_x: 0.125
                allow_stretch: True    

		# manual operate layout
		MDBoxLayout:
			id: layout_operate_manual
			orientation: "vertical"
			size_hint_y: 0.44
			padding:10
			spacing:10

			MDLabel:
				text: "MACHINE MANUAL OPERATION"
				bold: True
				font_size: 32
				color: 0, 0, 0
				size_hint_y: 0.1

			MDBoxLayout:
				orientation: "horizontal"
				canvas.before:
					Color:
						rgba: 0.5, 0, 0, 1
					Line:
						width: 2
						rectangle: self.x, self.y, self.width, self.height

				MDGridLayout:
					cols:2
					row_force_default: True
					row_default_height: 50
					padding:40
					spacing:40
					size_hint_x: 0.6

					MDLabel:
						text: "Feeding (Y-axis)"
						bold: True
						font_size: 22
						color: 0, 0, 0

					MDTextField:
						id: input_operate_feeding
						hint_text: "Input Feeding (mm)"
						bold: True
						font_size: 22
						input_filter: 'float'
						on_text_validate: root.update()

					MDLabel:
						text: "Bending Angle (C-axis)"
						bold: True
						font_size: 22
						color: 0, 0, 0

					MDTextField:
						id: input_operate_bending
						hint_text: "Input Bending Angle (degree)"
						bold: True
						font_size: 22
						input_filter: 'float'
						on_text_validate: root.update()

					MDLabel:
						text: "Turning Angle (B-axis)"
						bold: True
						font_size: 22
						color: 0, 0, 0

					MDTextField:
						id: input_operate_turning
						hint_text: "Input Turning Angle (degree)"
						bold: True
						font_size: 22
						input_filter: 'float'
						on_text_validate: root.update()

					MDLabel:
						text: "Horizontal (X-axis)"
						bold: True
						font_size: 22
						color: 0, 0, 0

					MDTextField:
						id: input_operate_horizontal
						hint_text: "Input Horizontal (mm)"
						bold: True
						font_size: 22
						input_filter: 'float'
						on_text_validate: root.update()

				# machine illustration
				Image:
					id: machine
					source:'asset/machine_operation.png'
					size_hint_x: 0.4
					allow_stretch: True  

		# MDRectangleFlatIconButton: navigation operation
		MDBoxLayout:
			orientation: "horizontal"
			size_hint_y: 0.04
			padding:10
			spacing:10

			MDFillRoundFlatIconButton:
				id: bt_screen_manual
				icon: "hand"
				text: "MANUAL OPERATION"
				font_size: 28
				size_hint_x: 0.5
				on_press: root.screen_operate_manual()
			
			MDFillRoundFlatIconButton:
				id: bt_screen_auto
				icon: "play"
				text: "AUTOMATIC OPERATION"
				font_size: 28
				size_hint_x: 0.5
				on_press: root.screen_operate_auto()		

		# MDRectangleFlatIconButton: navigation layout
		MDBoxLayout:
			orientation: "horizontal"
			size_hint_y: 0.04
			padding:10
			spacing:10

			MDFillRoundFlatIconButton:
				id: bt_screen_pipe_setting
				icon: "cogs"
				text: "PIPE SETTING"
				font_size: 28
				size_hint_x: 0.25
				on_press: root.screen_pipe_setting()
			
			MDFillRoundFlatIconButton:
				id: bt_screen_machine_setting
				icon: "cogs"
				text: "MACHINE SETTING"
				font_size: 28
				size_hint_x: 0.25
				on_press: root.screen_machine_setting()

			MDFillRoundFlatIconButton:
				id: bt_screen_advanced_setting
				icon: "cogs"
				text: "ADVANCED SETTING"
				font_size: 28
				size_hint_x: 0.25
				on_press: root.screen_advanced_setting()

			MDFillRoundFlatIconButton:
				id: bt_screen_operate
				icon: "human"
				text: "OPERATION MODE"
				font_size: 28
				size_hint_x: 0.25
				on_press: root.screen_operate_auto()

			MDFillRoundFlatIconButton:
				id: bt_screen_compile
				icon: "file"
				text: "COMPILE FILE"
				font_size: 28
				size_hint_x: 0.25
				on_press: root.screen_compile()